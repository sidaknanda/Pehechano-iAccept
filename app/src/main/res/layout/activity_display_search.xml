<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.iaccept.pehechano.search.DisplaySearchActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/splash_img"
        android:id="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="true" />

    <TextView
        android:text="Employee Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:background="@drawable/buttonshape" />

    <ImageView
        app:srcCompat="@drawable/dummy"
        android:id="@+id/imageViewSearchPicture"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#000000"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSearchPicture"
        android:layout_width="0dp"
        android:id="@+id/linearLayout"
        android:layout_height="0.5dp"></LinearLayout>

    <TextView
        android:text="Pehechano ID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintRight_toLeftOf="@+id/textViewSearchId"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.66" />

    <TextView
        android:text="id"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSearchId"
        android:gravity="right|end"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:singleLine="true" />

    <TextView
        android:text="Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/textView12"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/textViewSearchName"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSearchName"
        android:gravity="right|end"
        app:layout_constraintLeft_toLeftOf="@+id/textViewSearchId"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSearchId"
        app:layout_constraintBottom_toTopOf="@+id/textViewSearchPhone"
        android:layout_marginBottom="11dp"
        android:singleLine="true" />

    <TextView
        android:text="Phone Number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/textView14"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/textViewSearchPhone"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSearchPhone"
        android:gravity="right|center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewSearchName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:singleLine="true" />

</android.support.constraint.ConstraintLayout>
